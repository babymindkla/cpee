    printf("R1 = ");
    scanf("%f",&r1);
    printf("R2 = ");
    scanf("%f",&r2);
    printf("V  = ");
    scanf("%f",&v);
-------------------------------------------------------------------------------------------------------------------
    printf("\nR1 : %-8.2f R2 : %-8.2f R total : %6.2f\n",r1,r2,(r1+r2));
    printf("V1 : %-8.2f V2 : %-8.2f V total : %6.2f\n",(v/(r1+r2))*r1,(v/(r1+r2))*r2,(v/(r1+r2))*(r1+r2));
    printf("I1 : %-8.2f I2 : %-8.2f I total : %6.2f",(v/(r1+r2)),(v/(r1+r2)),(v/(r1+r2)));
-------------------------------------------------------------------------------------------------------------------
    printf("\nR1 : %-8.2f R2 : %-8.2f R total : %6.2f\n",r1,r2,(r1*r2)/(r1+r2));
    printf("V1 : %-8.2f V2 : %-8.2f V total : %6.2f\n",v,v,v);
    printf("I1 : %-8.2f I2 : %-8.2f I total : %6.2f\n",v/r1,v/r2,v/((r1*r2)/(r1+r2)));
-------------------------------------------------------------------------------------------------------------------
